@model IQueryable<Model.ClassInfo> 
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> 
        @Html.ActionLink("Add New","Add","ClassInfo")
        <table border="0">
            <tr>
                <th>ID</th><th>Title</th>
            </tr>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.cId</td>
                    <td>@c.cTitle</td>
                    <td>@Html.ActionLink("Edit", "Edit", "ClassInfo",new {id=c.cId},null)</td>
                    <td>@Html.ActionLink("Delete", "Delete", "ClassInfo", new { id = c.cId }, null)</td>
                </tr>
            }
        </table>
    </div>
</body>
</html>
